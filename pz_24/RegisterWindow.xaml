<Window x:Class="pz_24.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz_24"
        mc:Ignorable="d"
        Title="Регистрация" Height="300" Width="400">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Name="UsernameTextBox" Width="200" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <PasswordBox Name="PasswordBox" Width="200" Margin="0,70,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <ComboBox Name="RoleComboBox" Width="200" Margin="0,110,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <ComboBoxItem Content="patient" />
            <ComboBoxItem Content="admin" />
        </ComboBox>
        <Button Content="Зарегистрироваться" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" MinWidth="120" Click="RegisterButton_Click"/>
    </Grid>
</Window>
