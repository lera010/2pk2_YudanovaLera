<Window x:Class="pz_24.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz_24"
        mc:Ignorable="d"
        Title="Вход" Height="250" Width="400">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Name="UsernameTextBox" Width="200" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <PasswordBox Name="PasswordBox" Width="200" Margin="0,70,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" MinWidth="70" Click="LoginButton_Click"/>
    </Grid>
</Window>
